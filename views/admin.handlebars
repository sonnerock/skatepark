<h1>Skate Park</h1>

<div class="py-4">
  <h2>Administración</h2>
  <hr class="w-50" />

  <table class="table w-50 m-auto">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Foto</th>
        <th scope="col">Nombre</th>
        <th scope="col">Años de experiencia</th>
        <th scope="col">Especialidad</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>
    <tbody>
      {{#each skaters}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>
          <div></div>
        </td>
        <td>{{this.nombre}}</td>
        <td>{{this.anos_experiencia}}</td>
        <td>{{this.especialidad}}</td>
        <td><input type="checkbox" {{#if this.estado}} checked {{/if}} onclick="handleChancge" ({{this.id}}, this) />
        </td>
      </tr>
      <tr>
        <th scope="row">2</th>
        <td>
          <div></div>
        </td>
        <td>Evelien Bouilliart</td>
        <td>10</td>
        <td>Heelflip</td>
        <td><input type="checkbox" checked /></td>
      </tr>
      <tr>
        <th scope="row">3</th>
        <td>
          <div></div>
        </td>
        <td>Danny Way</td>
        <td>8</td>
        <td>Ollie</td>
        <td><input type="checkbox" /></td>
      </tr>
    </tbody>
  </table>
</div>

<script>

  async function handleChange(id, event) {
    const estado = event.checked

    const result = await fetch("/skaters/status", {
      method: 'PUT',
      headers: {
        "Content-Type": "application/json"
      },
      body: JSON.stringify({
        id: id,
        estado: estado
      })
    })

    const data = await result.json()

    if (result.status == 500) {
      alert('Problemas actualizando estado')
      return
    }
  }
</script>